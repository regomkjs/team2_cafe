<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kh.app.dao.MemberDAO">
	<insert id="insertMember">
		insert into member(me_id, me_pw, me_email, me_phone, me_date)
		values(#{member.me_id}, #{member.me_pw}, #{member.me_email}, #{member.me_phone}, now())
	</insert>
	<select id="selectUser" resultType="kr.kh.app.model.vo.MemberVO">
		select * from member where me_id = #{id}
	</select>
	<select id="selectAllmemberNum" resultType="int">
		select count(*) from member
	</select>
	<select id="selectMemberNum" resultType="int">
		select count(*) from member
	</select>
	
	
</mapper>